<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.erum.mapper.FileMapper">
	<insert id="insertFile"
		parameterType="com.study.erum.model.File">
		INSERT INTO file (username,place_name, filename, filepath) VALUES
		(#{username},#{placeName}, #{filename}, #{filepath})
	</insert>
	<select id="getFilesByPlaceName" parameterType="String"
		resultType="com.study.erum.model.File">
		SELECT * FROM file WHERE place_name = #{placeName}
	</select>
	<select id="getAllImageUrls" resultType="string">
		SELECT filepath FROM file;
	</select>
	<select id="getFile" parameterType="Long"
		resultType="com.study.erum.model.File">
		SELECT * FROM file WHERE id = #{id}
	</select>
</mapper>        